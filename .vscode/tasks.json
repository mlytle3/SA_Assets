{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve with Live Server",
            "type": "shell",
            "command": "live-server",
            "args": [
                "--port=5500",
                "--entry-file=index.html"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Open in Browser",
            "type": "shell", 
            "command": "start",
            "args": ["${workspaceFolder}/index.html"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent"
            }
        }
    ]
}